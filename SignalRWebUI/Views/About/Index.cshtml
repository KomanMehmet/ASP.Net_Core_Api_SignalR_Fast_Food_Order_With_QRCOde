@model List<ResultAboutDto>


@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkında İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkında Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkında alanı ile ilgili işlemleri buradan yapabilirsiniz. Tema tutarlılığı için lütfen tek bir hakkında bilgisi giriniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Görsel</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkında Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

