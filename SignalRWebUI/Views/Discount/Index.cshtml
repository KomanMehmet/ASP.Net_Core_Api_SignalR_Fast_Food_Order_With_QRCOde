@model List<ResultDiscountDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirim ile ilgili işlemleri buradan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık Bilgisi</th>
									<th scope="col">Açıklama</th>
									<th scope="col">İndirim Miktarı</th>
									<th scope="col">Görsel</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
										<td>@item.ImageURL</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

