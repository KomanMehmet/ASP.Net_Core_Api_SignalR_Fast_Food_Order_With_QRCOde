@model List<ResultFeatureDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Özellik İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ana Sayfa Özellik Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfada yer alan özelliklerle ilgili işlemleri buradan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık Bilgisi1</th>
									<th scope="col">Açıklama1</th>
									<th scope="col">Başlık Bilgisi2</th>
									<th scope="col">Açıklama3</th>
									<th scope="col">Başlık Bilgisi3</th>
									<th scope="col">Açıklama3</th>

									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title1</td>
										<td>@item.Description1</td>
										<td>@item.Title2</td>
										<td>@item.Description2</td>
										<td>@item.Title3</td>
										<td>@item.Description3</td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni Özellik Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

