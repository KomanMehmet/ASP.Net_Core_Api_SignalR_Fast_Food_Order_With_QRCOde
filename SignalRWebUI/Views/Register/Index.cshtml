@model RegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>KMN Restaurant Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Pizza1.jpg" alt="form" style="height:684px; width:484px">
			</div>
			<form class="form-detail"  method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text" id="username" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="UserName">
				</div>
				<div class="form-row">
					<input type="text" id="name" class="input-text" placeholder="Adınız" required asp-for="Name">
				</div>
				<div class="form-row">
					<input type="text" id="surname" class="input-text" placeholder="Soyadınız" required asp-for="Surname">
				</div>
				<div class="form-row">
					<input type="email" id="youremail" class="input-text" placeholder="Mail Adresiniz" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}" asp-for="Email">
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Şifreniz" required asp-for="Password">
				</div>

				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>