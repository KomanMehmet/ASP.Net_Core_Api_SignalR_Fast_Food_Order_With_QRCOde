@model CreateBookingDto

@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form method="post">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingName">Ad Soyad Giriniz</label>
                                <input type="text" class="form-control" id="bookingName" asp-for="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingPhone">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" id="bookingPhone" asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingEmail">Mail Adresi Giriniz</label>
                                <input type="text" class="form-control" id="bookingEmail" asp-for="Email">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingPerson">Kişi Sayısı Giriniz</label>
                                <input type="text" class="form-control" id="bookingPerson" asp-for="PersonCount">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingDate">Rezervasyon Tarihi Giriniz</label>
                                <input type="text" class="form-control" id="bookingDate" asp-for="Date">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Rezervasyon Bilgisini Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

