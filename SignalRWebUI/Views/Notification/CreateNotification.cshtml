@model CreateNotificationDto

@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form method="post">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="notificationtype">Bildirim Türünü Giriniz</label>
                                <input type="text" class="form-control" id="notificationtype" asp-for="NotificationType">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="notificationicon">Bildirim Iconunu Giriniz</label>
                                <input type="text" class="form-control" id="notificationicon" asp-for="NotificationIcon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="notificationdescription">Bildirim Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" id="notificationdescription" asp-for="NotificationDescription">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="notificationdate">Bildirim Tarihini Giriniz</label>
                                <input type="text" class="form-control" id="notificationdate" asp-for="NotificationDate">
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="notificationstatus">Bildirim Durumunu Giriniz</label>
                                    <input type="text" class="form-control" id="notificationstatus" asp-for="NotificationStatus">
                                </div>
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-primary">Bildirim Bilgisini Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

