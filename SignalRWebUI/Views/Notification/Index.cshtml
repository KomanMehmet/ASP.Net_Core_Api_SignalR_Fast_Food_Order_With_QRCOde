@model List<ResultNotificationDto>


@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirim alanı ile ilgili işlemleri buradan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Bildirim Türü</th>
									<th scope="col">Bildirim Iconu</th>
									<th scope="col">Bildirim Açıklaması</th>
									<th scope="col">Bildirim Tarihi</th>
									<th scope="col">Bildirim Durumu</th>
									<th scope="col">Okundu İşaretle</th>
									<th scope="col">Okunmadı İşaretle</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.NotificationType</td>
										<td>@item.NotificationIcon</td>
										<td>@item.NotificationDescription</td>
										<td>@item.NotificationDate</td>
										<td>@item.NotificationStatus</td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-info">Okundu</a></td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-warning">Okunmadı</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/Notification/CreateNotification" class="btn btn-outline-primary">Yeni Bildirim Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>


