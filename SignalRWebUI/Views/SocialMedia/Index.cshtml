@model List<ResultSocialMediaDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri buradan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık Bilgisi1</th>
									<th scope="col">Icon</th>
									<th scope="col">Site URL</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.Icon</td>
										<td>@item.SocialMediaUrl</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Sosyal Medya Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

