@model List<ResultContactDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";

	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgisi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Footer kısmında bulunan iletişim ile ilgili işlemleri buradan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Lokasyon Bilgisi</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Mail Adresi</th>
									<th scope="col">Description</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Location</td>
										<td>@item.PhoneNumber</td>
										<td>@item.Email</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>

						<a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Bilgisi Ekle</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

